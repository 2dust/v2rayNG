<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:startColor="#FF8616" android:endColor="#F17400" android:type="linear" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:startColor="#FF8616" android:endColor="#F17400" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:startColor="#ffa94d" android:endColor="#ff8402" android:type="linear" />
        </shape>
    </item>
</selector>
