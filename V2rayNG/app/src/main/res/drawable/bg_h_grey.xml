<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:startColor="#5E5E5E" android:endColor="#474747" android:type="linear" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:startColor="#5E5E5E" android:endColor="#474747" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:startColor="#9a979a" android:endColor="#6a6a6a" android:type="linear" />
        </shape>
    </item>
</selector>
